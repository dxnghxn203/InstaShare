<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".Activity.UploadActivity"
    android:background="#100C0B">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:layout_marginRight="90dp"
            android:layout_marginLeft="90dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:paddingTop="10dp"
            android:text="Gửi đến..."/>
        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/downloads"
            android:scaleType="centerCrop"
            android:background="@null"
            android:padding="10dp"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:id="@+id/button2"
            />
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="50dp"
        android:layout_marginTop="40dp"
        android:elevation="10dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/imgUpload"
            android:layout_width="380dp"
            android:layout_height="380dp"
            android:scaleType="centerCrop"/>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="160dp">
        </androidx.viewpager.widget.ViewPager>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/SliderDots"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp">
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/baseline_close"
            android:scaleType="centerCrop"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:id="@+id/btnCloseUpload"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="4">
            <ImageButton
                android:id="@+id/btnUpload"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="5dp"
                android:background="@drawable/custombutton"
                android:src="@drawable/send"
                android:scaleType="centerInside"
                android:gravity="center"/>
        </LinearLayout>
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/caption"
            android:scaleType="centerCrop"
            android:background="@null"
            android:padding="14dp"
            android:id="@+id/btnCaption"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
</LinearLayout>